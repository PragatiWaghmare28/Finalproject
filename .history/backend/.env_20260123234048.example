# Backend environment variables example
# Copy to `backend/.env` and edit values for your environment.

# Database (sqlite example)
DATABASE_URL=sqlite:///./backend.db

# AI keys (optional, for embeddings/LLM)
GOOGLE_API_KEY=your-google-api-key
OPENAI_API_KEY=your-openai-api-key

# ChromaDB persistence dir (for embeddings)
CHROMA_PERSIST_DIR=./chroma_persist

# Application settings
APP_NAME=Video-RAG
DEBUG=true

# Upload directory (make sure it exists and is writable)
UPLOAD_DIR=./uploads
# Database
DATABASE_URL=sqlite:///./videorag.db

# Vector DB
CHROMA_PERSIST_DIR=./chroma_db

# AI Services (choose one)
OPENAI_API_KEY=your-openai-key
GOOGLE_API_KEY=your-google-key

# File Storage
UPLOAD_DIR=./uploads

# Optional: Redis for background tasks
REDIS_URL=redis://localhost:6379
